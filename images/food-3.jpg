  <!-- Plate -->
  <ellipse cx="200" cy="220" rx="130" ry="20" fill="#FFFFFF" stroke="#E0E0E0" stroke-width="2"/>
  
  <!-- Cake base -->
  <rect x="170" y="130" width="60" height="40" fill="#8B4513"/>
  <rect x="175" y="135" width="50" height="30" fill="#D2691E"/>
  
  <!-- Cake layers -->
  <rect x="170" y="145" width="60" height="3" fill="#FFFFFF"/> <!-- Cream layer -->
  <rect x="170" y="155" width="60" height="3" fill="#FFFFFF"/> <!-- Cream layer -->
  
  <!-- Chocolate drizzle -->
  <path d="M 175 130 Q 185 125 195 130 Q 205 135 215 130 Q 225 125 225 130" 
        stroke="#654321" stroke-width="2" fill="none"/>
  
  <!-- Berries on top -->
  <circle cx="185" cy="125" r="4" fill="#DC143C"/>
  <circle cx="200" cy="122" r="4" fill="#DC143C"/>
  <circle cx="215" cy="125" r="4" fill="#DC143C"/>
  
  <!-- Berry leaves -->
  <path d="M 185 121 L 183 118 L 187 118 Z" fill="#228B22"/>
  <path d="M 200 118 L 198 115 L 202 115 Z" fill="#228B22"/>
  <path d="M 215 121 L 213 118 L 217 118 Z" fill="#228B22"/>
  
  <!-- Coffee cup -->
  <ellipse cx="120" cy="180" rx="20" ry="15" fill="#8B4513"/>
  <rect x="100" y="165" width="40" height="15" fill="#8B4513"/>
  <ellipse cx="120" cy="165" rx="20" ry="8" fill="#654321"/>
  
  <!-- Cup handle -->
  <path d="M 140 170 Q 150 170 150 180 Q 150 190 140 190" 
        stroke="#8B4513" stroke-width="3" fill="none"/>
  
  <!-- Steam from coffee -->
  <g opacity="0.6">
    <path d="M 115 155 Q 110 145 120 135" stroke="#C0C0C0" stroke-width="1.5" fill="none"/>
    <path d="M 125 155 Q 120 145 130 135" stroke="#C0C0C0" stroke-width="1.5" fill="none"/>
  </g>
  
  <!-- Title -->
  <text x="200" y="50" text-anchor="middle" font-family="Arial, sans-serif" 
        font-size="22" font-weight="bold" fill="#C51718">Chocolate Cake & Coffee</text>
</svg>